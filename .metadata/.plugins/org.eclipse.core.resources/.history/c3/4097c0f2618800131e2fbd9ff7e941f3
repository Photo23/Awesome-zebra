
import java.awt.Color;
import javax.swing.JComponent;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.geom.Ellipse2D;
import java.awt.geom.Line2D;
	/** Creates my face.
	 * 
	 * @author Jonathan Bush
	 *
	 */
public class MyFace extends JComponent {
	
	// default instance variables
	int height = 200;
	int eyeSize = 0;
	
	
	
	// constructor
	/** Default face.
	 * 
	 * @param height Height of head.
	 * @param eyeSize Size of the eyes.
	 */
	public MyFace (int heightIn, int eyeSizeIn)
	{
		height = heightIn;
		eyeSize = eyeSizeIn;
	}
	/**
	   Draws a face.
	 */
	 
	   public void paintComponent(Graphics g)
	   {
		  
	      Graphics2D g2 = (Graphics2D) g;
		  g2.setColor(Color.red);
		  
	      // head
	      Ellipse2D.Double head = new Ellipse2D.Double(0, 0, 225, height);
	      g2.draw(head);
	      
	      //eyes
	      Ellipse2D.Double eyeLeft = new Ellipse2D.Double(50, 50, 25, 25);
	      g2.fill(eyeLeft);
	      g2.draw(eyeLeft);
	      
	      Ellipse2D.Double eyeRight = new Ellipse2D.Double(150, 50, 25, 25);
	      g2.fill(eyeRight);
	      g2.draw(eyeRight);
	      
	      //mouth
	      Line2D.Double mouth = new Line2D.Double(50, 150, 150, 175);
	      g2.draw(mouth);
	   }
}

